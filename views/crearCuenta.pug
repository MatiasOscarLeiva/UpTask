doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1 Crea tu cuenta en UpTask 

            if locals.mensajes 
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo
                    label(for="email") Email:
                    input(name="email" type="email" placeholder="tu@email.com" value=`${email || ''}`)
                .campo
                    label(for="password") Contrase√±a:
                    input(name="password" type="password" placeholder="Tu password" value=`${password || ''}`)
                .campo.enviar
                    input.boton(type="submit" value="Crear Cuenta")
                .campo 
                    a(href="/iniciar-sesion") Ir a Iniciar Sesion
        script(src="/dist/bundle.js") 